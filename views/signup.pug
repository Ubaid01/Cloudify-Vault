extends base

block content
    .auth-container
        .auth-card
            h1 Create Your Account
            p Join us and start uploading, managing, and sharing your files

            form.auth-form.signup-form(action="")
                .form-group
                    label(for="name") Full Name
                    input#name(type="text", name="name", placeholder="Enter your full name", required)

                .form-group
                    label(for="email") Email Address
                    input#email(type="email", name="email", placeholder="Enter your email", required)

                .form-group
                    label(for="password") Password
                    input#password(type="password", name="password", placeholder="Create a strong password", required, minlength="8")

                .form-group
                    label(for="passwordConfirm") Confirm Password
                    input#passwordConfirm(type="password", name="passwordConfirm", placeholder="Confirm your password", required, minlength="8")

                .form-group
                    label(for="photo") Profile Photo (Optional)
                    input#photo(type="file", name="photo", accept="image/*")
                    small.form-text Upload a profile picture (JPG, PNG, GIF)

                button.btn.btn-primary(type="submit") Create Account

            .auth-footer
                p Already have an account? 
                    a(href="/login") Sign in here